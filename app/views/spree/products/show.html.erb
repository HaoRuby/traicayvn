<div class="container">
  <% @body_id = 'product-details' %>
  <div class="row">
    <h2 class="page-title">Buy Fruit</h2>
  </div>
  <% cache cache_key_for_product do %>
    <div data-hook="product_show" class="row" itemscope itemtype="https://schema.org/Product">
      <div class="col-md-5 col-sm-6" data-hook="product_left_part">
        <div data-hook="product_left_part_wrap">
          <div id="product-images" data-hook="product_images">
            <div id="main-image" class="panel panel-default" data-hook>
              <div class="panel-body text-center">
                <%= render :partial => 'image' %>
              </div>
            </div>
            <div id="thumbnails" data-hook>
              <%= render :partial => 'thumbnails' %>
            </div>
          </div>

          <div data-hook="product_properties">
            <%= render :partial => 'properties' %>
          </div>

          <div data-hook="promotions">
            <%= render :partial => 'promotions' %>
          </div>
        </div>
      </div>

      <div class="col-md-7 col-sm-6" data-hook="product_right_part">
        <div data-hook="product_right_part_wrap">
          <div id="product-description" data-hook="product_description">
            <h1 class="product-title" itemprop="name"><%= @product.name %></h1>
            <div>
              <span class="lead price selling" itemprop="price">
                <%= display_price(@product) %> per pound
              </span>
              <span itemprop="priceCurrency" content="<%= @product.currency %>"></span>
            </div>

            <div class="well" itemprop="description" data-hook="description">
              <%= product_description(@product) %>
            </div>

            <div class="well plus">
              <p>
                <strong><%= @product.name %>: </strong>Lorem ipsum dolor sit amet, consectetur adipisicing elit. <br>
                <strong>Serve: </strong>Lorem ipsum dolor sit amet, consectetur adipisicing elit. <br>
                <strong>Shipping: </strong>5% <br>
                <strong>Special: </strong>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Delectus quisquam, optio, sint sed ducimus temporibus.
              </p>
            </div>

            <div id="cart-form" data-hook="cart_form">
              <%= render :partial => 'cart_form' %>
            </div>
          </div>

        </div>
      </div>
    </div>
    <div class="row">
      <div id="taxon-crumbs" class=" five " data-hook="product_taxons">
        <%= render :partial => 'taxons' %>
      </div>
    </div>
  <% end %>
</div>
