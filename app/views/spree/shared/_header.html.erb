<% info = Spree::StoreInfo.first %>
<div id="spree-header">
  <header id="header" data-hook>
    <div class="container">
      <div class="row">
        <figure id="logo" class="col-md-4 col-sm-3" data-hook>
          <% if info.logo.to_s.empty? %>
            <%= logo img_option: {class: 'footer-logo'} %>
          <% else %>
            <%= link_to image_tag(info.logo, class: 'footer-logo'), spree.root_path  %>
          <% end %>
        </figure>
        <%= render :partial => 'spree/shared/nav_bar' %>
      </div>
    </div>
  </header>
  <div class="container">
    <%= render :partial => 'spree/shared/main_nav_bar' if store_menu? %>
  </div>
</div>
