<% info = Spree::StoreInfo.first  %>
<% store = Spree::Store.current  %>
<div class="container">
  <div class="row">
    <div class="col-md-3 col-sm-6">
      <h5>Social Media</h5>
      <div class="brand-bg foot-brand">
        <a href="#" class="facebook text-center"><i class="fa fa-facebook square-3 rounded-5"></i></a>
        <a href="#" class="twitter text-center"><i class="fa fa-twitter square-3 rounded-5"></i></a>
        <a href="#" class="instagram text-center"><i class="fa fa-instagram square-3 rounded-5"></i></a>
      </div>
      <h5>Join our Mailing list</h5>
      <form class="footer-form">
        <div class="form-group">
          <input type="text" class="form-control" id="name" placeholder="Name">
        </div>
        <div class="form-group">
          <input type="email" class="form-control" id="email" placeholder="Email">
        </div>
        <button type="submit" class="btn btn-default">Subcribe</button>
      </form>
    </div>
    <div class="col-md-3 col-sm-6">
      <h5>Opening Hours</h5>
      <p>Monday - Thursday 8am-5pm</p>
      <p>Fridat - Sunday 11am-9pm</p>
    </div>
    <div class="col-md-3 col-sm-6">
      <h5>Contact traicayvn</h5>
      <p><i class="fa fa-home"></i>  <%= info.address %></p>
      <p><i class="fa fa-phone"></i>  <%= info.phone %></p>
      <p><i class="fa fa-envelope"></i>  <%= store.mail_from_address %></p>
    </div>
    <div class="col-md-3 col-sm-6 text-center instagram">
      <h5>@ INSTAGRAM</h5>
      <div class="row">
        <div class="col-xs-4"><%= image_tag "footer-img1.png" %></div>
        <div class="col-xs-4"><%= image_tag "footer-img2.png" %></div>
        <div class="col-xs-4"><%= image_tag "footer-img3.png" %></div>
      </div>
      <div class="row">
        <div class="col-xs-4"><%= image_tag "footer-img4.png" %></div>
        <div class="col-xs-4"><%= image_tag "footer-img5.png" %></div>
        <div class="col-xs-4"><%= image_tag "footer-img6.png" %></div>
      </div>
      <div class="row">
        <div class="col-xs-4"><%= image_tag "footer-img7.png" %></div>
        <div class="col-xs-4"><%= image_tag "footer-img8.png" %></div>
        <div class="col-xs-4"><%= image_tag "footer-img9.png" %></div>
      </div>
    </div>
  </div>
</div>
<div class="bottom-footer">
  <div class="container">
    <p class="text-center">Copyright Â© 2015</p>
