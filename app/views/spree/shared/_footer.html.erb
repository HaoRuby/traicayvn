<% info = Spree::StoreInfo.first  %>
<% store = Spree::Store.current  %>
<div class="footer-left">
  <% if info.logo.to_s.empty? %>
    <%= logo img_option: {class: 'footer-logo'} %>
  <% else %>
    <%= link_to image_tag(info.logo.url, class: 'footer-logo'), spree.root_path  %>
  <% end %>

  <p class="footer-company-name"><%= store.name %> &copy; 2017</p>
</div>

<div class="footer-center">

  <div>
    <i class="fa fa-map-marker"></i>
    <p><%= info.address %></p>
  </div>

  <div>
    <i class="fa fa-phone"></i>
    <p>Phone number: <%= info.phone  %></p>
  </div>

  <div>
    <i class="fa fa-envelope"></i>
    <p><a href="mailto:support@company.com">Email: <%= store.mail_from_address %></a></p>
  </div>

</div>

<div class="footer-right">

  <p class="footer-company-about">
    <span>About the company</span>
    <%= info.description %>
  </p>

  <div class="footer-icons">

    <a href="#"><i class="fa fa-facebook"></i></a>
    <a href="#"><i class="fa fa-twitter"></i></a>
    <a href="#"><i class="fa fa-linkedin"></i></a>
    <a href="#"><i class="fa fa-github"></i></a>

  </div>

</div>